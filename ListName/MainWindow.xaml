<Window x:Class="ListName.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListName"
        mc:Ignorable="d"
        Title="MainWindow" Height="481" Width="800">
    <Grid Margin="0,0,0,33">
        <TextBox x:Name="NameBox" HorizontalAlignment="Left" Margin="39,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="217"/>
        <Button x:Name="AddNameButton" Content="Add Name" HorizontalAlignment="Left" Margin="39,47,0,0" VerticalAlignment="Top" Width="217" Click="AddNameButton_Click"/>
        <ListBox x:Name="NameList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="286,24,10,0"/>
        <Label x:Name="NameListLabel" Content="Name List" HorizontalAlignment="Left" Margin="286,-2,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
